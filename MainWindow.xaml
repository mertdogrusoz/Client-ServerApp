<Window x:Class="Task_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- Lamp Group -->
        <Canvas x:Name="LampCanvas" Background="Gray" Width="100" Height="100" HorizontalAlignment="Left" Margin="27,48,0,226" RenderTransformOrigin="-0.142,0.098"/>
        <Button x:Name="LampButton" Content="LAMP IS OFF" HorizontalAlignment="Left" Margin="41,197,0,0" VerticalAlignment="Top" Click="LampButton_Click"/>

        <!-- Text Group -->
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Margin="226,130,0,0" VerticalAlignment="Top" Width="200" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="TextButton" Content="Generate Random" HorizontalAlignment="Left" Margin="262,187,0,0" VerticalAlignment="Top" Click="TextButton_Click"/>
    </Grid>
</Window>
